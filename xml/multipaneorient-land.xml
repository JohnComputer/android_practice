<?xml version="1.0" encoding="utf-8"?>

<!-- LinearLayout 배경 설정 및 fragment 배치 <가로모드> id 꼭 지정!! FrameLayout 지정 설명 들어갈곳 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!-- PlanetListFragment 클래스에서 생성된 리스트 출력  -->
    <fragment
        class="com.example.multipane.MainActivity$PlanetListFragment"
        android:id="@+id/planet"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
<!-- 내용이 바뀔수 있으니 공간만 지정 -->
    <FrameLayout
        android:id="@+id/descpanel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        />
</LinearLayout>